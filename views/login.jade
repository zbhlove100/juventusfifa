html
  head
    title= title
    script(src='/js/jquery11.1.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-3.2.0-dist/css/bootstrap.min.css')
    script(src='/stylesheets/bootstrap-3.2.0-dist/js/bootstrap.min.js')
  body
    div(class="container" id="logincontainer")
      div(class="row")
        div(class="col-xs-2")
        div(class="col-xs-2")
          <img src="/images/juventus.jpg" alt="..." class="img-rounded">
        div(class="col-xs-1")
        div(class="col-xs-4")
          form.form-signin(role='form' action='/dologin' method='post')
            div(class="form-group")
              h3(style="text-align:center") Admin Login
            div(class='form-group')
              input.form-control(name='username' placeholder='Username' required)
            div(class='form-group')
              input.form-control(name='password' type='password'  placeholder='Password' required)
            div(class='form-group')
              input(class='btn btn-lg btn-primary btn-block' type='submit' value='Login')


    block script
    script.
      window.onload=function(){
        var err="!{err}";
        $("#errormessage").text(err);
      }


